{
  "experiment": "rv_l27_causal_validation",
  "description": "Gold Standard Pipeline 2: Prove L27 is causal for geometric contraction",
  "params": {
    "model": "mistralai/Mistral-7B-v0.1",
    "n_pairs": 60,
    "target_layer": 27,
    "control_layer": 21,
    "early_layer": 5,
    "window": 16,
    "seed": 42,
    "include_controls": ["random", "shuffled", "wrong_layer"]
  },
  "pass_criteria": {
    "transfer_efficiency_min": 0.5,
    "patched_vs_baseline_p_max": 0.001,
    "random_opposite_direction": true,
    "wrong_layer_null_p_min": 0.05
  },
  "results": {
    "root": "results",
    "phase": "gold_standard"
  }
}









